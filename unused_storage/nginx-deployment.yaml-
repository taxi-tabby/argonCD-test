apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  namespace: default-test 
spec:
  replicas: 2  # nginx 파드 2개 생성
  selector:
    matchLabels:
      app: nginx  # 라벨을 app: nginx로 설정
  template:
    metadata:
      labels:
        app: nginx  # 파드에 app: nginx 라벨을 지정
    spec:
      containers:
      - name: nginx
        image: nginx:latest  # 사용할 NGINX 이미지
        ports:
        - containerPort: 80  # 포트 80을 개방
